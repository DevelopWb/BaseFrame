<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">TCircleProgressLibrary</string>
    <declare-styleable name="TCircleProgressView">
        <!-- 圆弧宽度 -->
        <attr format="dimension" name="tcpv_border_width"/>
        <!-- 圆弧开始角度 -->
        <attr format="integer" name="tcpv_start_angle"/>
        <!-- 圆弧空白角度 -->
        <attr format="integer" name="tcpv_blank_angle"/>
        <!-- 动画持续时间 单位秒 -->
        <attr format="integer" name="tcpv_animation_duration"/>
        <!-- 总进度 -->
        <attr format="integer" name="tcpv_total_progress"/>
        <!-- 背景色 -->
        <attr format="color" name="tcpv_background_color"/>
        <!-- 圆弧背景色 -->
        <attr format="color" name="tcpv_arc_background_color"/>

        <!-- 进度圆弧开始色 -->
        <attr format="color" name="tcpv_arc_start_color"/>
        <!-- 进度圆弧结束色 -->
        <attr format="color" name="tcpv_arc_end_color"/>

        <!-- 半圆背景色 -->
        <attr format="color" name="tcpv_hint_background_color"/>
        <!-- 字体颜色 -->
        <attr format="color" name="tcpv_hint_text_color"/>
        <!-- 字体大小 -->
        <attr format="dimension" name="tcpv_hint_text_size"/>
        <!-- 文字偏移量 -->
        <attr format="dimension" name="tcpv_hint_text_padding"/>
        <!-- 文字 -->
        <attr format="string" name="tcpv_hint_text"/>
        <!-- 是否显示半圆 -->
        <attr format="boolean" name="tcpv_hint_show"/>
        <!-- 半圆覆盖比率 0.1 - 1 -->
        <attr format="float" name="tcpv_hint_semicircle_rate"/>

    </declare-styleable>
</resources>