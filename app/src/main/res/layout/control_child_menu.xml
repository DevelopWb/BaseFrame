<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <ImageView
        android:id="@+id/tabitem_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/app_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tabitem_text"/>
    <TextView
        android:id="@+id/tabitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上报"
        android:singleLine="true"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabitem_image"/>

    <ImageView
        android:id="@+id/edit_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/delete_red_bg"
        app:layout_constraintTop_toTopOf="@+id/tabitem_image"
        app:layout_constraintBottom_toTopOf="@+id/tabitem_image"
        app:layout_constraintLeft_toRightOf="@+id/tabitem_image"
        app:layout_constraintRight_toRightOf="@+id/tabitem_image"
        />
</android.support.constraint.ConstraintLayout>