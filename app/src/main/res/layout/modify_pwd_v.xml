<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/modify_pwd_ll"
        android:layout_width="280dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:background="@drawable/sp_filled_white_6dp"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="修改密码" />

        <LinearLayout
            android:id="@+id/dialog_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="旧密码"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/old_pwd_et"
                style="@style/edittext_style"
                android:hint="请输入旧密码" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="新密码"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/new_pwd_et"
                style="@style/edittext_style"
                android:hint="请输入新密码" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="再次确认"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/re_new_pwd_et"
                style="@style/edittext_style"
                android:hint="请再次输入新密码" />

            <TextView
                android:id="@+id/commit_modify_tv"
                style="@style/bt_style"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="确认"></TextView>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/close_dialog_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/close_stoken_white"
        app:layout_constraintBottom_toTopOf="@+id/modify_pwd_ll"
        app:layout_constraintLeft_toRightOf="@+id/modify_pwd_ll"
       />
</android.support.constraint.ConstraintLayout>