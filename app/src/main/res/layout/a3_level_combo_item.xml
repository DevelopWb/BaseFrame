<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/level_combo_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/stroke_gray_circle_bg"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="dfadfasdf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unread_tv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="88"
        android:textSize="8sp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/sp_filled_red_circle"
        app:layout_constraintBottom_toTopOf="@+id/level_combo_title_tv"
        app:layout_constraintLeft_toRightOf="@+id/level_combo_title_tv"
        app:layout_constraintRight_toRightOf="@+id/level_combo_title_tv"
        app:layout_constraintTop_toTopOf="@+id/level_combo_title_tv" />
</android.support.constraint.ConstraintLayout>