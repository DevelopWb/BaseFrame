<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    android:paddingLeft="15dp"
    android:paddingTop="3dp"
    android:paddingRight="15dp"
    android:paddingBottom="3dp">
    <TextView
        android:id="@+id/important_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/select_key_tv"
        style="@style/multiTextKeyStyle"
        android:text="选择控件的key"
        app:layout_constraintLeft_toRightOf="@+id/important_tag_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_value_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/multiTextKeyStyle"
        android:hint="请选择"
        android:gravity="center_vertical|right"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/select_key_tv"
        app:layout_constraintRight_toLeftOf="@+id/select_arrow_right_iv"
        app:layout_constraintTop_toTopOf="@+id/select_key_tv" />

    <ImageView
        android:id="@+id/select_arrow_right_iv"
        android:layout_width="12dp"
        android:layout_height="8dp"
        android:src="@mipmap/arrow_right"
        app:layout_constraintBottom_toBottomOf="@+id/select_value_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/select_value_tv" />

</android.support.constraint.ConstraintLayout>