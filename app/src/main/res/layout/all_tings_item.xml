<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/business_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fasdfjlasdkf"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/business_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="fasdfjlasdkf"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/business_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/business_name_tv"
        app:layout_constraintTop_toTopOf="@+id/business_name_tv" />

    <TextView
        android:id="@+id/business_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="fasdfjlasdkf"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/business_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/business_name_tv" />


    <a3phone.of.com.main.base.customview.a3levelcombo.A3LevelLableRv
        android:id="@+id/a3_level_lable_rv"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/business_name_tv"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/business_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fasdfjlasdkf"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a3_level_lable_rv" />

    <TextView
        android:id="@+id/business_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:text="金额"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/business_type_tv"
        app:layout_constraintRight_toLeftOf="@+id/business_amount_tv"
        app:layout_constraintTop_toTopOf="@+id/business_type_tv" />

    <TextView
        android:id="@+id/business_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="数量"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/business_type_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/business_type_tv" />

    <TextView
        android:id="@+id/business_request_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请名称"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_type_tv" />

    <TextView
        android:id="@+id/business_request_reason_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="申请名称"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_request_name_tv" />

    <TextView
        android:id="@+id/business_request_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申请名称"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/business_request_reason_tv" />

    <ProgressBar
        android:id="@+id/business_request_progress_pb"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:progress="50"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="50dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/business_request_progress_tv"
        app:layout_constraintLeft_toRightOf="@+id/business_request_progress_tv"
        app:layout_constraintTop_toTopOf="@+id/business_request_progress_tv" />

    <TextView
        android:id="@+id/business_request_progress_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/business_request_progress_pb"
        app:layout_constraintBottom_toBottomOf="@+id/business_request_progress_pb"
        app:layout_constraintLeft_toRightOf="@+id/business_request_progress_pb"
        android:textColor="@color/black"
        />
</android.support.constraint.ConstraintLayout>